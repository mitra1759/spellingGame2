<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <stroke
                android:width="2.3dp"
                android:color="#d50000" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <stroke
                android:width="2.3dp"
                android:color="#37474f" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffea00"
                android:centerColor="#ffea00"
                android:endColor="#64dd17"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#424242" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#000000"
                android:centerColor="#000000"
                android:endColor="#000000"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#424242" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>